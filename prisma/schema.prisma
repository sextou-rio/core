// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../src/db/dev.db"
}

model User {
  id       String  @id @default(cuid())
  username String  @unique
  password String
  email    String  @unique
  name     String
  avatar   String
  events   Event[]

  @@map("users")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  date        DateTime
  tickets     String?
  attendees   User[]

  @@map("events")
}
