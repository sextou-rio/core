// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
  email    String @unique
  name     String
  avatar   String

  @@map("users")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  date        DateTime
  tickets     String

  @@map("events")
}
